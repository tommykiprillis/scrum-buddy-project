<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<title>Scrum Buddy</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	<style>
        .burndown-container {
            height: 100vh;              /* Set height to 100% of the viewport */
            box-sizing: border-box;     /* Include padding and border in the height calculation */
        }
		.Front-End-badge {
			background-color:#70d6ff;
			color: white;
		}

		.Back-End-badge {
			background-color:#ff70a6;
			color: white;
		}

		.API-badge {
			background-color:#ff9770;
			color: white;
		}

		.Databases-badge {
			background-color:#ffd670;
			color: white;
		}

		.Testing-badge {
			background-color:#7bf1a8;
			color: white;
		}

		.UIUX-badge {
			background-color:#7161ef;
			color: white;
		}

    .merriweather-regular {
    font-family: "Merriweather", serif;
    font-weight: 400;
    font-style: normal;
    }

    .Low-badge {
			background-color:#2ECC71;
			color: white;
    }

    .Medium-badge {
			background-color:#F4D03F;
			color: white;
    }

    .Important-badge {
			background-color:#F39C12;
			color: white;
    }

    .Urgent-badge {
			background-color:#E74C3C;
			color: white;
    }


	</style>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
</head>

<body class="bg-white">

  <nav class="navbar navbar-expand-sm bg-body-tertiary">
    <div class="container-fluid">
      <a class="nav-brand fs-4 merriweather-regular nav-link" href="/">Scrum Buddy.</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample03" aria-controls="navbarsExample03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExample03">
        <ul class="navbar-nav me-auto mb-2 mb-sm-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/">Product Backlog</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Sprints</a>
            <ul class="dropdown-menu">
              <% sprints.forEach(sprint => { %>
                <li>
                    <form action="/setSprintView" method="POST">
                        <input type="hidden" name="sprintId" value="<%=sprint.id%>">
                        <button type="submit" class="dropdown-item">
                            <%= sprint.name %>
                        </button>
                    </form>
                </li>
              <% }) %>
            </ul>
          </li>
        </ul>
        <div class="d-lg-flex col-lg-3 justify-content-lg-end">
          <button class="btn btn-primary d-inline-flex align-items-center rounded-pill" type="button" data-bs-toggle="modal" data-bs-target="#createSprint">
            <svg xmlns="http://www.w3.org/2000/svg" width="1rem" height="1rem" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
            </svg>&nbsp;Create Sprint
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!--Modal for creating a sprint-->
  <div class="modal fade" id="createSprint" tabindex="-1">
    <div class="modal-dialog" style="max-width: 50rem;">
      <div class="modal-content">
        <div class="modal-body">
          <form action="/createSprint" method="POST">
            <!--Name for the sprint-->
            <label for="nameInput" class="form-label">Sprint Name</label>
            <input class="form-control" id="nameInput" type="text" name="name" autocomplete="off">

            <div class="row mt-4">
            <!--Start Date for the sprint-->
              <div class="col">
                <label for="startDateInput" class="form-label">Start Date</label>
                <input class="form-control" id="startDateInput" type="date" name="startDate" autocomplete="off">
              </div>

            <!--End Date for the sprint-->
              <div class="col">
                <label for="endDateInput" class="form-label">End Date</label>
                <input class="form-control" id="endDateInput" type="date" name="endDate" autocomplete="off">
              </div>
            </div>
            <!--Saving Changes-->
            <button type="submit" class="btn btn-primary mt-3">Create</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid">